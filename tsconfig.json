{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "isolatedModules": true,
    "sourceMap": false,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "checkJs": false,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noEmitOnError": false,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,

    "typeRoots": ["src/@types", "node_modules/@types"],
    /* Module Resolution Options */
    "baseUrl": ".",
    "paths": {
      "analytics": ["./src/analytics"],
      "components": ["./src/components"],
      "components*": ["./src/components*"],
      "styles": ["./src/styles"],
      "styles*": ["./src/styles*"],
      "hooks": ["./src/hooks"],
      "global": ["./src/global"],
      "data": ["./src/data"],
      "utilities": ["./src/utilities"],
      "copy": ["./src/copy"],
      "img": ["./src/img"],
      "types": ["./src/types"],
      "types*": ["./src/types*"],
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "preserveSymlinks": true
  },
  "exclude": [
    "node_modules",
    "public",
    ".cache",
    ".vscode",
    ".github",
    "static"
  ]
}
